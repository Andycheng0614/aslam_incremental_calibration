<egomotion>
  <simulation>
    <params>
      <trajectory>
        <type>combined</type> <!--straight, sinePlanar, random, combined-->
        <A>20.0</A>
        <f>0.05</f>
        <w_T_v_0>
          <x>0.0</x>
          <y>0.0</y>
          <z>0.0</z>
          <yaw>0.0</yaw>
          <pitch>0.0</pitch>
          <roll>0.0</roll>
        </w_T_v_0>
        <splines>
          <transSplineLambda>1e-3</transSplineLambda>
          <rotSplineLambda>1e-3</rotSplineLambda>
          <splineKnotsPerSecond>5</splineKnotsPerSecond>
          <transSplineOrder>4</transSplineOrder>
          <rotSplineOrder>4</rotSplineOrder>
        </splines>
      </trajectory>
      <T>2000.0</T> <!--seconds-->
      <dt>0.1</dt> <!--seconds-->
      <calibration>
        <num>2</num>
        <sensor_0>
          <idx>1</idx>
          <intrinsics>
            <!--time delay in nanoseconds-->
            <timeDelay>0</timeDelay>
          </intrinsics>
          <extrinsics>
            <translation>
              <x>0.0</x>
              <y>0.0</y>
              <z>0.0</z>
            </translation>
            <rotation>
              <yaw>0.0</yaw>
              <pitch>0.0</pitch>
              <roll>0.0</roll>
            </rotation>
          </extrinsics>
        </sensor_0>
        <sensor_1>
          <idx>2</idx>
          <intrinsics>
            <!--time delay in nanoseconds-->
            <timeDelay>0</timeDelay>
          </intrinsics>
          <extrinsics>
            <translation>
              <x>0.0</x>
              <y>0.0</y>
              <z>0.0</z>
            </translation>
            <rotation>
              <yaw>0.0</yaw>
              <pitch>0.0</pitch>
              <roll>0.0</roll>
            </rotation>
          </extrinsics>
        </sensor_1>
      </calibration>
      <noise>
        <sensor_0>
          <idx>0</idx>
          <e1>1e-0</e1>
          <e2>1e-0</e2>
          <e3>1e-0</e3>
          <e4>1e-0</e4>
          <e5>1e-0</e5>
          <e6>1e-0</e6>
        </sensor_0>
        <sensor_1>
          <idx>1</idx>
          <e1>1e-0</e1>
          <e2>1e-0</e2>
          <e3>1e-0</e3>
          <e4>1e-0</e4>
          <e5>1e-0</e5>
          <e6>1e-0</e6>
        </sensor_1>
        <sensor_2>
          <idx>2</idx>
          <e1>1e-0</e1>
          <e2>1e-0</e2>
          <e3>1e-0</e3>
          <e4>1e-0</e4>
          <e5>1e-0</e5>
          <e6>1e-0</e6>
        </sensor_2>
      </noise>
    </params>
  </simulation>

  <calibrator>
    <windowDuration>30</windowDuration>
    <verbose>true</verbose>
    <!--time delay bound in nanoseconds-->
    <delayBound>500000000</delayBound>
    <referenceSensor>0</referenceSensor>
    <useNoisyData>false</useNoisyData>
    <splines>
      <transSplineLambda>1e-3</transSplineLambda>
      <rotSplineLambda>1e-3</rotSplineLambda>
      <splineKnotsPerSecond>5</splineKnotsPerSecond>
      <transSplineOrder>4</transSplineOrder>
      <rotSplineOrder>4</rotSplineOrder>
    </splines>
    <sensors>
      <num>2</num>
      <sensor_0>
        <idx>1</idx>
        <intrinsics>
          <!--time delay in nanoseconds-->
          <timeDelay>0</timeDelay>
          <timeDelayActive>true</timeDelayActive>
        </intrinsics>
        <extrinsics>
          <translation>
            <active>true</active>
            <x>0.0</x>
            <y>0.0</y>
            <z>0.0</z>
          </translation>
          <rotation>
            <active>true</active>
            <yaw>0.0</yaw>
            <pitch>0.0</pitch>
            <roll>0.0</roll>
          </rotation>
        </extrinsics>
      </sensor_0>
      <sensor_1>
        <idx>2</idx>
        <intrinsics>
          <!--time delay in nanoseconds-->
          <timeDelay>0</timeDelay>
          <timeDelayActive>true</timeDelayActive>
        </intrinsics>
        <extrinsics>
          <translation>
            <active>true</active>
            <x>0.0</x>
            <y>0.0</y>
            <z>0.0</z>
          </translation>
          <rotation>
            <active>true</active>
            <yaw>0.0</yaw>
            <pitch>0.0</pitch>
            <roll>0.0</roll>
          </rotation>
        </extrinsics>
      </sensor_1>
    </sensors>
    <estimator>
      <infoGainDelta>0.5</infoGainDelta>
      <groupId>1</groupId>
      <verbose>true</verbose>
      <optimizer>
        <convergenceDeltaJ>1e-3</convergenceDeltaJ>
        <convergenceDeltaX>1e-3</convergenceDeltaX>
        <maxIterations>20</maxIterations>
        <linearSolverMaximumFails>0</linearSolverMaximumFails>
        <nThreads>16</nThreads>
        <verbose>true</verbose>
        <linearSolver>
          <columnScaling>true</columnScaling>
          <epsNorm>1e-16</epsNorm>
          <epsSVD>1e-3</epsSVD>
          <epsQR>1e-16</epsQR>
          <svdTol>-1</svdTol>
          <qrTol>-1</qrTol>
          <verbose>true</verbose>
        </linearSolver>
      </optimizer>
    </estimator>
  </calibrator>
</egomotion>
